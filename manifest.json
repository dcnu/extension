{
	"manifest_version": 3,
	"name": "extension",
	"version": "0.0.4",
	"description": "Personal productivity and browsing utilities",
	"permissions": [
		"storage",
		"declarativeNetRequest",
		"declarativeNetRequestFeedback",
		"tabs",
		"offscreen",
		"clipboardWrite",
		"webNavigation",
		"browsingData",
		"alarms"
	],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "dist/background/service-worker.js",
		"type": "module"
	},
	"action": {
		"default_title": "extension",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"commands": {
		"copy-clean-url": {
			"suggested_key": {
				"default": "Ctrl+Shift+L",
				"mac": "Command+Shift+L"
			},
			"description": "Copy cleaned URL to clipboard"
		},
		"activate-focus-mode": {
			"suggested_key": {
				"default": "Ctrl+Shift+F",
				"mac": "Command+Shift+F"
			},
			"description": "Start focus mode timer"
		}
	},
	"web_accessible_resources": [
		{
			"resources": ["src/pages/warning.html", "src/pages/timer.html"],
			"matches": ["<all_urls>"]
		}
	]
}
